<%- include('partials/header') %>
<div class="form-container">
    <h2>Add Question</h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="questionID">Question ID</label>
            <input type="text" name="questionID" id="questionID" class="form-control" value="<%= locals.questionID || '' %>" required />
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" name="description" id="description" class="form-control" value="<%= locals.description || '' %>" required />
        </div>
        <div class="form-group">
            <label for="option1">Option 1</label>
            <input type="text" name="option1" id="option1" class="form-control" value="<%= locals.option1 || '' %>" required />
        </div>
        <div class="form-group">
            <label for="option2">Option 2</label>
            <input type="text" name="option2" id="option2" class="form-control" value="<%= locals.option2 || '' %>" required />
        </div>
        <div class="form-group">
            <label for="parentID">Parent ID</label>
            <input type="text" name="parentID" id="parentID" class="form-control" value="<%= locals.parentID || '' %>" required />
        </div>
        <div class="form-group">
            <label for="childID1">Child ID1</label>
            <input type="text" name="childID1" id="childID1" class="form-control" value="<%= locals.childID1 || '' %>" required />
        </div>
		<div class="form-group">
            <label for="childID2">Child ID2</label>
            <input type="text" name="childID2" id="childID2" class="form-control" value="<%= locals.childID2 || '' %>" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
            <a href="/login" class="btn btn-link">Cancel</a>
        </div>
    </form>
</div>
<%- include('partials/footer') %>
